<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<TextView
		android:id="@+id/mainactivity_url_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="5sp"
		android:text="@string/mainactivity_url_label_text"
		android:textAppearance="@android:style/TextAppearance.Medium"
	/>
	<EditText
		android:id="@+id/mainactivity_url"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/mainactivity_url_hint"
		android:singleLine="true"
		android:inputType="textUri"
	/>
	<TextView
		android:id="@+id/mainactivity_file_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="10sp"
		android:text="@string/mainactivity_file_label_text"
		android:textAppearance="@android:style/TextAppearance.Medium"
	/>
	<EditText
		android:id="@+id/mainactivity_file"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/mainactivity_file_hint"
		android:singleLine="true"
		android:inputType="textUri"
	/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0sp"
		android:layout_weight="1"
		android:gravity="bottom">
		<Button
			android:id="@+id/mainactivity_verify"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/mainactivity_verify_text"
			android:textAppearance="@android:style/TextAppearance.Medium"
			android:onClick="buttonOnClick"
		/>
		<Button
			android:id="@+id/mainactivity_download"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/mainactivity_download_text"
			android:textAppearance="@android:style/TextAppearance.Medium"
			android:onClick="buttonOnClick"
		/>
	</LinearLayout>
</LinearLayout>
